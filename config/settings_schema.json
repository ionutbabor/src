  {
    "name": "Amputee Store Theme",
    "settings": [
      {
        "type": "header",
        "content": "Timber Framework"
      },
      {
        "type": "paragraph",
        "content": "v2.1.0"
      },
      {
        "type": "paragraph",
        "content": "Theme settings allow designers to provide an easy way for any user to customize the look and feel of their shop without having to delve into HTML or CSS code. Please see our [help page on theme settings](http:\/\/docs.shopify.com\/themes\/theme-templates\/settings) to learn more about how you can make the theme customizable."
      },
      {
        "type": "paragraph",
        "content": "Review [Timber's documentation](http:\/\/shopify.github.io\/Timber\/) for any development help."
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "checkbox",
        "id": "logo_use_image",
        "label": "Use Custom Logo"
      },
      {
        "type": "image",
        "id": "logo.png",
        "label": "Custom Logo",
        "max-width": 450,
        "max-height": 200,
        "info": "Maximum logo dimensions are 450px wide by 200px high. The uploaded file will be resized to fit within those constraints."
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Max Logo Width",
        "default": "450",
        "info": "Defines the CSS max-width."
      },
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "checkbox",
        "id": "favicon_enable",
        "label": "Use custom icon?"
      },
      {
        "type": "image",
        "id": "favicon.png",
        "label": "16px x 16px png",
        "max-width": 16,
        "max-height": 16
      },
      {
        "type": "checkbox",
        "id": "enable_promo-bar",
        "label": "Promo Bar Enabled?"
      },
      {
        "type": "text",
        "id": "promo-bar-text",
        "label": "Promo Bar Text"
      },
      {
        "type": "text",
        "id": "promo-bar-link",
        "label": "Promo Bar Link Target"
      },
      {
        "type": "color",
        "id": "promo-bar-text-color",
        "label": "Promo Bar Text Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "promo-bar-color",
        "label": "Promo Bar Background Color",
        "default": "#e49a3b"
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "text",
        "id": "content-header",
        "label": "24\/7 HELP",
        "default": "24\/7 HELP"
      }
    ]
  },
