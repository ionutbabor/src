<div class="toolbar">

  <div class="grid--full grid-padding">
    <div class="grid__item large--one-fifth small--one-half medium--two-twelfths">
     <div class="view-mode">
      <label>Filter by:</label> 
    </div>
    
     {% include "filter-menu" %}
  </div>














  <div class="grid__item large--one-fifth small--one-half medium--one-quarter">
   




   {% comment %} {% assign colItems = collection.all_vendors | size %}
    {% if colItems > 0 %}
    <div class="filter-brand btn-group">

     <button class="btn-2 dropdown-toggle" data-toggle="dropdown">
       <i class="icon-exchange"></i>
       <span>Choose Brand</span>
       <i class="icon-chevron-down"></i>
     </button>

     <ul class="dropdown-menu" role="menu">
       {% for vendor in collection.all_vendors %}
       {% if collection.current_vendor == vendor %}
       <li>{{ vendor | link_to_vendor }}</li>
       {% else %}
       <li>{{ vendor | link_to_vendor }}</li>
       {% endif %}
       {% endfor %}
     </ul>
   </div>
   {% endif %}

   {% assign colItems = collection.all_types | size %}
  {% if colItems > 0 %}
  <div class="filter-type btn-group">

    <button class="btn-2 dropdown-toggle" data-toggle="dropdown">
      <i class="icon-exchange"></i>
      {% if paginate.page_size != 50 %}
      <span>choose Tags</span>
      {% else %}
      <span>all</span>
      {% endif %}  
      <i class="icon-chevron-down"></i>
    </button>

    <ul class="dropdown-menu" role="menu"> 
      {% for tag in collection.all_tags %}
      {% if current_tags contains tag %}
      
      {% else %}
      <li>
        {{ tag | link_to_tag: tag }}
      </li>
      {% endif %}
      {% endfor %}
    </ul>
    {% endif %}
 </div>{% endcomment %}

 {% comment %}<div class="grid__item large--one-quarter small--one-whole medium--one-quarter">
  

    

  </div>

   <div class="clearfix filter">
   <p>Browse by tag:</p>
   <select class="coll-filter">
     <option value="">All</option>
     {% for tag in collection.all_tags %}
     {% if current_tags contains tag %}
     <option value="{{ tag | handle }}" selected>{{ tag }}</option>
     {% else %}
     <option value="{{ tag | handle }}">{{ tag }}</option>
     {% endif %}
     {% endfor %}
   </select>
 </div>


 <ul class="clearfix filters">
  
  <li class="clearfix filter">
    <select class="coll-filter">
      <option value="all">Amputation Level</option>
      {% for link in linklists.amputation-level.links %}
      {% assign c = link.object %}
      {% if collection.handle == c.handle %}
      <option value="{{ c.handle }}" selected>{{ link.title }}</option>
      {% else %}
      <option value="{{ c.handle }}">{{ link.title }}</option>
      {% endif %}
      {% endfor %}
    </select>
  </li>
  
  <li class="clearfix filter">
    {% assign tags = 'Yes, No' | split: ',' %}
    <label>Select Model</label>
    <select class="coll-filter">
      <option value="">Hole-In-The Toe</option>
      {% for t in tags %}
      {% assign tag = t | strip %}
      {% if current_tags contains tag %}
      <option value="{{ tag | handle }}" selected>{{ tag }}</option>
      {% elsif collection.all_tags contains tag %}
      <option value="{{ tag | handle }}">{{ tag }}</option>
      {% endif %}
      {% endfor %}
    </select>
  </li>
  <li class="clearfix filter">
    {% assign tags = '1999, 2000, 2001, 2002, 2003, 2004, 2005, 2006, 2007, 2008, 2009, 2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018' | split: ',' %}
    <label>Select Year</label>
    <select class="coll-filter">
      <option value="">All</option>
      {% for t in tags %}
      {% assign tag = t | strip %}
      {% if current_tags contains tag %}
      <option value="{{ tag | handle }}" selected>{{ tag }}</option>
      {% elsif collection.all_tags contains tag %}
      <option value="{{ tag | handle }}">{{ tag }}</option>
      {% endif %}
      {% endfor %}
    </select>
  </li>
</ul>{% endcomment %}
</div>





<div class="grid__item large--one-third medium--one-third  text-right small--one-whole pull-right">
  {% include 'collection-sorting' %}
</div>
<!-- begin grid/list view -->
{% comment %}
 <div class="grid__item large--one-twelfth one-sixth small--one-third">
  <div class="btn-group view-mode">
    <label>View as</label>
    <a class="grid" href="grid" title="Grid view">Grid</a>  
    <a class="list active" href="list" title="List view">List</a>  
  </div>
</div>
<script>
   
            $(".view-mode a").click(function(e) {
                if (!$(this).hasClass("active")) {
                    var paging = $(".filter-show > button span").text();
                  if(paging == 'choose'){paging = 'all'}
                    if ($(this).hasClass("list")) {
                        Shopify.queryParams.view = "list" + paging;
                    } else {
                        Shopify.queryParams.view = paging;
                    }

                    ella.sidebarAjaxClick();
                    $(".view-mode a.active").removeClass("active");
                    $(this).addClass("active");
                }
                e.preventDefault();
            });
      
</script>
{% endcomment %}
<!-- end grid/list view -->

</div><!-- grid-full -->
</div><!-- toolbar -->


