

    <div id="slider1" class="royalSlider rsDefault img-responsive">
      {% for image in product.images %}

      <a class="rsImg" data-rsdelay="1000" data-rsbigimg="{{ image.src | product_img_url: 'large' }}" href="{{ image.src | product_img_url: 'large' }}" {% if image.alt contains "youtube" or image.alt contains "youtu.be" or image.alt contains "vimeo" %} data-rsVideo="{{ image.alt }}"{% endif %}>
        <img  width="96" height="96" class="rsTmb" src="{{ image.src | product_img_url: 'small' }}" alt="{{ image.alt }}">
      </a>

      {% endfor %}

    </div>
    





