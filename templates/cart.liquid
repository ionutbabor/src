<!-- /templates/cart.liquid -->
{% comment %}

For info on test orders:
- General http://docs.shopify.com/manual/your-store/orders/test-orders
- Shopify Payments - http://docs.shopify.com/manual/more/shopify-payments/testing-shopify-payments

{% endcomment %}
{% include 'bold-cart' %}

{% if cart.item_count > 0 %}
<div class="grid--full grid-padding">


  <form action="/cart" method="post" novalidate class="cart">

    <h1>{{ 'cart.general.title' | t }}</h1>

    <!-- Bold: Quantity Breaks - Step 7 -->
    <div id="shappify-qty-cart-msg"></div>
    <!-- // end Bold code -->

    <div class="cart__row medium-down--hide cart__header-labels">
      <div class="grid--full">
        <div class="grid__item large--one-half">

          <div class="grid__item two-thirds push--one-third">
            {{ 'cart.label.product' | t }}
          </div>

        </div>
        <div class="grid__item large--one-half">

          <div class="grid__item one-third medium-down--one-third">
            {{ 'cart.label.price' | t }}
          </div>
          <div class="grid__item one-third medium-down--one-third text-center">
            {{ 'cart.label.quantity' | t }}
          </div>
          <div class="grid__item one-third medium-down--one-third text-right">
            {{ 'cart.label.total' | t }}
          </div>
        </div>

      </div>
    </div>

  {% comment %}
  Loop through products in the cart
  {% endcomment %}
  <script>mixed_cart = false;</script>
  {% assign show_paypal = true %}
  {% for item in cart.items %}
{% comment %}  {% include 'bold-ro-price-fix' %}{% endcomment %}
  {% include 'bold-cart-item' with item %}
  {% assign prod_index = forloop.index0 %}
  <input type="hidden" name="product_id[{{ forloop.index0 }}]" value="{{ item.product.id }}">
  <input type="hidden" name="variant_id[{{ forloop.index0 }}]" value="{{ item.variant.id }}">
  <input type="hidden" name="quantity[{{ forloop.index0 }}]" value="{{ item.quantity }}">
  <div class="cart__row">
    <div class="grid--full cart__row--table-large">

      <div class="grid__item large--one-half">


        <div class="grid__item one-third">
          <a href="{{ item.url | within: collections.all }}" class="cart__image">

              {% comment %}
              More image size options at:
              - http://docs.shopify.com/themes/filters/product-img-url
              {% endcomment %}
              <img src="{{ item | img_url: 'medium' }}" alt="{{ item.title | escape }}">
            </a>

          </div>

          <div class="grid__item two-thirds info-collumn">
            <div class="description">
              <a href="{{ item.url }}" class="h4">
                {{ item.product.title }}
              </a>
              {% unless item.variant.title contains 'Default' %}
              <small>{{ item.variant.title }}</small>
              {% endunless %}

              {% if settings.cart_vendor_enable %}
              <p>{{ item.vendor }}</p>
              {% endif %}

            {% comment %}
            Optional, loop through custom product line items if available

            For more info on line item properties, visit:
            - http://docs.shopify.com/support/your-store/products/how-do-I-collect-additional-information-on-the-product-page-Like-for-a-monogram-engraving-or-customization
            {% endcomment %}
            <!-- bold-ro-liquid -->
            {% if item.properties.frequency_num %}
            <script>mixed_cart = true;</script>
            <br>
            <span class="bold_ro_every">Ship every</span>
            <input type="hidden" name="{{ prod_index }}[number]" value="{{ item.properties.frequency_num }}" />
            <span class="bold_ro_frequency_num">{{ item.properties.frequency_num }}</span>
            {% endif %}
            {% if item.properties.frequency_type %}
            <input type="hidden" name="{{ prod_index }}[type_id]" value="{{ item.properties.frequency_type }}" />
            {% endif %}
            {% if item.properties.frequency_type_text %}
            <span class="bold_ro_frequency_type_text">{{ item.properties.frequency_type_text }}</span>
            {% endif %}
            {% if item.properties.group_id %}
            {% assign show_paypal = false %}
            <input type="hidden" name="{{ prod_index }}[group_id]" value="{{ item.properties.group_id }}" />
            {% endif %}
            {% if item.properties._ro_unformatted_price %}
            <br><span class="bold_ro_discounted_price">Discounted Price</span>
            <span class="discounted_price_in_cart">{{ item.properties._ro_unformatted_price | money }}</span> <span class="bold_ro_each">each</span>
            {% elsif item.properties %}

            <p class="product-delay">
              {% for p in item.properties %}
              {{ p }}
              {% endfor %}
            </p>

            {% endif %}
            <!-- bold-ro-liquid -->

            <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0" class="cart__remove bold_remove_class">
              <small>{{ 'cart.general.remove' | t }}</small>
            </a>
          </div>
        </div>


      </div>

      <div class="grid__item large--one-half">
        <div class="grid--full cart__row--table-large">

          <div class="grid__item one-third">
            <span class="cart__mini-labels">{{ 'cart.label.price' | t }}</span>
            {% comment %}<span class="h3">{{ ro_item_price | money }}</span>{% endcomment %}
            <span class="h3">{{ bold_item_price | money }}</span>
          </div>

          <div class="grid__item one-third text-center">
            <div class="border-box">
              <span class="cart__mini-labels qty">{% comment %}{{ 'cart.label.quantity' | t }}{% endcomment %}Qty: </span>
              {% comment %}<input type="number" name="updates[]" id="updates_{{ item.id }}" value="{{ item.quantity }}" min="0">{% endcomment %}
              <select id="updates_{{ item.id }}" name="updates[]" class="quantity"> 
                {% for i in (1..10) %} {% assign q = i %}
                <option value="{{ q }}"{% if item.quantity == q %} selected{% endif %}>{{ i }}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="grid__item one-third text-right">
            <span class="cart__mini-labels">{{ 'cart.label.total' | t }}</span>
            {% comment %}<span class="h3">{{ ro_line_item_price | money }}</span>{% endcomment %}
            <span class="h3">{{ bold_item_line_price | money }}</span>
          </div>

        </div>
      </div>

    </div>
  </div>
  {% endfor %}

  <div class="cart__row">
    <div class="grid--full">
      {% comment %}
      Optional, add a textarea for special notes
      - Your theme settings can turn this on or off. Default is on.
      - Make sure you have name="note" for the message to be submitted properly
      {% endcomment %}
      {% if settings.cart_notes_enable %}
      <div class="grid__item large--one-half">
        <label for="CartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
        <textarea name="note" class="input-full" id="CartSpecialInstructions">{{ cart.note }}</textarea>
      </div>
      {% endif %}

      <div class="grid__item large--one-third medium--one-whole">
        <a class="btn continue hidden-xs" href="/collections/all" title="Continue shopping">Continue shopping</a>
      </div>

      <div class="grid__item large--one-third medium--one-whole small--one-whole">
       {% comment %}<p>All orders are processed in {{ shop.currency }} at the most recent exchange rate available.</p>
        <p><b>International taxes &amp; duties</b> are the responsibility of the buyer and are not pre-paid.  Please read <a href="/pages/shipping-information" target="_blank">our Shipping Policy.</a></p>
        <p>Domestic shipping &amp; taxes calculated at checkout.</p>{% endcomment %}
      </div>

      <div class="grid__item text-right{% if settings.cart_notes_enable %} large--one-half{% endif %} large--one-third medium--one-whole small--one-whole">

        {% assign us_amount = 5000 %}
        {% assign int_amount = 35000 %}

        <div id="bar-box" >

         <div class="us-shipping-message" style="display:none">
          {% if bold_cart_total_price < us_amount %}
          {% assign us_bar = us_amount | minus: bold_cart_total_price | times: 100 | divided_by: us_amount %}
          <p>Only {{ us_amount | minus: bold_cart_total_price | money }} to go for FREE SHIPING!</p>
          {% else %}
          <p class="green-text">You've got FREE SHIPPING!</p>
          {% endif %}
          <p><span class="min">$0</span><span class="max">$50</span></p>
          
          <div id="progressbar">
            <div class="line1">|</div>
            <div class="line2">|</div>
            <div class="line3">|</div>
            <div class="meter" style="width: calc(100% - {{us_bar}}%);"></div>
          </div>
        </div>

        <div class="int-shipping-message" style="display:none"">
         {% if bold_cart_total_price < int_amount %}
         {% assign int_bar = int_amount | minus: bold_cart_total_price | times: 100 | divided_by: int_amount %}
         <p>Only {{ int_amount | minus: bold_cart_total_price | money }} to go for FREE SHIPING!</p>
         {% else %}
         {% assign int_bar = 0 %}
         <p class="green-text">You've got FREE SHIPPING!</p>

         {% endif %}
         <p><span class="min">$0</span><span class="max">$350</span></p>
         <div id="progressbar">
          <div class="line1">|</div>
          <div class="line2">|</div>
          <div class="line3">|</div>
          <div class="meter" style="width: calc(100% - {{int_bar}}%);"></div>
        </div>
      </div>

    </div>

    <div class="border-line">
      <p>
        <span class="cart__subtotal-title">{{ 'cart.general.subtotal' | t }}</span>
        <span class="h3 cart__subtotal">{{ bold_cart_total_price | money }}</span>
      </p>

      <div class="cart-us-message" style="display:none">
        <p class="green-text" >{{ 'cart.general.shipping_at_checkout' | t }}</p>
        <p>Shipping and taxes calculated at checkout.</p>
      </div>

      <div class="cart-int-message" style="display:none">
       {{ settings.international-message }}
     </div>

     <input name="shopify_customer_id" type="hidden" value="{{ customer.id }}" > 
     <input name="email" type="hidden" value="{{ customer.email }}" > 
     <input name="address1" type="hidden" value="{{ customer.default_address.address1 }}" > 
     <input name="address2" type="hidden" value="{{ customer.default_address.address2 }}" > 
     <input name="city" type="hidden" value="{{ customer.default_address.city }}" > 
     <input name="company" type="hidden" value="{{ customer.default_address.company }}" > 
     <input name="country" type="hidden" value="{{ customer.default_address.country }}" > 
     <input name="first_name" type="hidden" value="{{ customer.default_address.first_name }}" > 
     <input name="last_name" type="hidden" value="{{ customer.default_address.last_name }}" > 
     <input name="phone" type="hidden" value="{{ customer.default_address.phone }}" > 
     <input name="province" type="hidden" value="{{ customer.default_address.province }}" > 
     <input name="zip" type="hidden" value="{{ customer.default_address.zip }}" >

     {% include 'bold-ro-cart' %}
     
     <input type="submit" name="update" class="btn--secondary update-cart" value="{{ 'cart.general.update' | t }}">
     <input type="submit" name="checkout" class="btn" value="{{ 'cart.general.checkout' | t }}">

     {% if additional_checkout_buttons and show_paypal %}
     <p class="separation-line"><span>OR</span></p>
     <div class="text-center">{{ content_for_additional_checkout_buttons }}</div>
     {% endif %}

   </div>
 </div>
</div>

</div>

</form>


</div>

{% section 'last-minute-checkout' %}

{% else %}
{% comment %}
The cart is empty
{% endcomment %}
<div class="grid--full grid-padding text-center">
  <h2 class="text-left">{{ 'cart.general.title' | t }}</h2>
  <h2 class="subtitle">{{ settings.cart_subtitle}}</h2>
  <p class="paragraph">{{ 'cart.general.empty' | t }}</p>
  {{ 'empty_cart.png' | asset_url | img_tag , 'empty-cart', 'img-empty-cart'}}
  {% comment %}<p>{{ 'cart.general.continue_browsing_html' | t }}</p>{% endcomment %}
  <p><a class="btn empty-cart-btn" href="/collections/all">Shop by Amputation Level</a></p>

</div>
{% endif %}
<script>
  $(document).on("click",".recurring_div, .one_time_div", function() {

    if($('.recurring_div').hasClass('bold_active')){
      $('.additional-checkout-buttons').hide();
	   $('.ajaxcart__footer .separation-line').hide();
    }else{
      $('.additional-checkout-buttons').show(); 
	  $('.ajaxcart__footer .separation-line').show();
    }
  });

  $("#paypal-express-button").prepend('CHECK OUT WITH ');

</script>


<script>
  //Begin Get a customer's location
  jQuery.ajax( {
    url: '//freegeoip.net/json/',
    type: 'POST',
    dataType: 'jsonp',
    success: function(location) {
        // If the visitor is browsing from US.
        if (location.country_code === 'US') {
      // US message.
      $( ".cart-us-message" ).show();
      $( ".us-shipping-message" ).show();
    }
      // If the visitor is browsing outside of the US.
      else {
        $( ".int-shipping-message" ).show();
        $( ".cart-int-message" ).show();
      }
    }
  } );  
  //End Get a customer's location
</script>