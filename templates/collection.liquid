<!-- original pagination -->
{% comment %}
{% if paginate.pages > 1 %}
<hr>
<div class="pagination">
  {% if paginate.previous %}
  <a href="{{ paginate.prev.url }}" style="display: inline-block;" rel="prev" >
    <img src="{{ 'arrow-left.png' | asset_url }}">
  </a>
  {% endif %}
  {{ paginate | default_pagination | replace: '&laquo; Previous', '' | replace: 'Next &raquo;', '' }}
  {% if paginate.next.is_link %}
  <a href="{{ paginate.next.url }}" style="display: inline-block;" rel="next" ><img src="{{ 'arrow-right.png' | asset_url }}"></a>
  {% endif %}
</div>
{% endif %}
{% endcomment %}
<!-- end original pagination -->


<!-- new pagination -->
<div class="pagination">
  {% if paginate.previous %}
  <a class="pagination-item" style="display: inline-block;" href="{{ paginate.previous.url }}"><img src="{{ 'arrow-left.png' | asset_url }}"><span class="arrow-text">Back</span></a>
  {% endif %}
  {% for part in paginate.parts %}
  {% if part.is_link %}
  <span class="page"> 
    <a href="{{ part.url }}">{{ part.title }}</a>
  </span>
  {% else %}
  {% if part.title == '&hellip;' %}
  {{ part.title }}
  {% else %}
  <span class="current page">{{ part.title }}</span>
  {% endif %}
  {% endif %}
  {% endfor %}
  {% if paginate.next %}
  <a class="pagination-item" style="display: inline-block;" href="{{ paginate.next.url }}"><span class="arrow-text">Next</span> <img src="{{ 'arrow-right.png' | asset_url }}"></a>
  {% endif %}
</div>
{% endpaginate %}
<!-- end new pagination -->



