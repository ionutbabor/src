      <ul class="mobile-nav large--hide">

        <li class="mobile-nav__item"><a href="#">ALL Prosthetic Categories</a></li>
        {% for link in linklists.main-menu.links %}
        {% assign child_list_handle = link.title | handleize %}
        {% if linklists[child_list_handle].links != blank %}
        <li class="mobile-nav__item{% if link.active %} mobile-nav__item--active{% endif %}" aria-haspopup="true">
          <div class="mobile-nav__has-sublist">

            <div class="mobile-nav__toggle">
              <div class="grid--full">
                <div class="grid__item large--one-half medium--one-half small--one-half">
                  <a href="#" class="mobile-nav__link">{{ link.title | replace: "Prosthetic", "" }}</a>
                </div>
                <div class="grid__item large--one-half medium--one-half small--one-half text-right">
                  <button type="button" class="icon-fallback-text mobile-nav__toggle-open">
                    <span class="fa fa-angle-down" aria-hidden="true"></span>
                    <span class="fallback-text">See More</span>
                  </button>
                  <button type="button" class="icon-fallback-text mobile-nav__toggle-close">
                    {% comment %}<span class="icon icon-minus" aria-hidden="true"></span>{% endcomment %}
                    <span class="fa fa-angle-up" aria-hidden="true"></span>
                    <span class="fallback-text">{{ 'cart.general.close_cart' | t | json }}</span>
                  </button>
                  
                </div>
              </div>

              
              
            </div>
          </div>
          <ul class="mobile-nav__sublist">
            {% for childlink in linklists[child_list_handle].links %}
            <li class="mobile-nav__item {% if childlink.active %} mobile-nav__item--active{% endif %}">
              <a href="{{ childlink.url }}" class="mobile-nav__link">{{ childlink.title | escape }}</a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% else %}
        <li class="mobile-nav__item{% if link.active %} mobile-nav__item--active{% endif %}">
          <a href="{{ link.url }}" class="mobile-nav__link">{{ link.title }}</a>
        </li>
        {% endif %}
        {% endfor %}
        <!-- Coin app by ShopPad -->
      </ul>
      <!-- //mobile-nav -->

        {%else%}
        <h4 class="large--hide"><a href="/collections/all">< all Prosthetic Categories</a></h4>
        {%endif%}

        {% if collection.handle contains 'personal' %}
        <h2 style="border-bottom: 2px solid {{ settings.link_color }}"><a href="/collections/personal-care" >{{collections.personal-care.title}}</a></h2>
        {% elsif collection.handle contains 'textiles' %}     
        <h2 style="border-bottom: 2px solid {{ settings.link_color }}"><a href="/collections/prosthetic-textiles" >{{collections.prosthetic-textiles.title}}</a></h2>
        {% elsif collection.handle contains 'prosthesis-suspension' %}
        <h2 style="border-bottom: 2px solid {{ settings.link_color }}"><a href="/collections/prosthesis-suspension" >{{collections.prosthesis-suspension.title}}</a></h2>
        {% elsif collection.handle contains 'prosthetic-gel-pads-sheaths-to-solve-fitting-issues' %}      
        <h2 style="border-bottom: 2px solid {{ settings.link_color }}"><a href="/collections/prosthetic-gel-pads-sheaths-to-solve-fitting-issues" >{{collections.prosthetic-gel-pads-sheaths-to-solve-fitting-issues.title}}</a></h2>
        {% comment %}{% elsif collection.handle contains 'featured-products' %}
        <h2 style="width: 300px;"><a href="/collections/featured-products" >Featured Amputee Supplies</a></h2>{% endcomment %}
        {% endif %}
      </div>
      <!-- end left part -->

      <!-- right part -->
      {% unless collection.handle contains 'featured' %}
      <div class="grid__item large--three-quarters parent-filters medium-down--hide" style="border-left: 1px solid #ccc;">
        {% comment %}<ul class="collection-tags">
          {% if collection.handle contains 'personal' or collection.handle contains 'skin-care' or collection.handle contains 'cleansers' or collection.handle contains 'sweat-control' or collection.handle contains 'moisturizers' or collection.handle contains 'wound-care' %}
          {% for link in linklists.personal-care.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}

          {% elsif collection.handle contains 'textiles' or collection.handle contains 'socks' or collection.handle contains 'shrinkers' or collection.handle contains 'sheaths' or collection.handle contains 'cosmetic-hosiery' or collection.handle contains 'textile-accessories' %}
          {% for link in linklists.prosthetic-textiles.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}

          {% elsif collection.handle contains 'prosthesis-suspension' or collection.handle contains 'suspension-belts' or collection.handle contains 'suspension-sleeves' or collection.handle contains 'prosthetic-liners' or collection.handle contains 'suspension-accessories' %}
          {% for link in linklists.prosthetic-suspension.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}

          {% elsif collection.handle contains 'cosmetic-finishing' or collection.handle contains 'cushion-and-volume-aids' or collection.handle contains 'slip-on-aids' or collection.handle contains 'travel-and-mobility' or collection.handle contains 'arm-amputee-supplies' or collection.handle contains 'friction-fighting' or collection.handle contains 'prosthetic-remedies' %}
          {% for link in linklists.prosthetic-remedies.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
          {% endif %}
        </ul>{% endcomment %}
        <ul class="collection-tags">
          {% if collection.handle contains 'personal' %}
          {% for link in linklists.personal-care.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}

          {% elsif collection.handle contains 'textiles' %}
          {% for link in linklists.prosthetic-textiles.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}

          {% elsif collection.handle contains 'prosthesis-suspension' %}
          {% for link in linklists.prosthetic-suspension.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}

          {% elsif collection.handle contains 'prosthetic-gel-pads-sheaths-to-solve-fitting-issues' %}
          {% for link in linklists.prosthetic-gel-products-for-amputees.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
          {% endif %}
        </ul>
      </div>
      {% endunless %}
      <!--end right part -->
      {% comment %}<hr>{% endcomment %}
    </div> <!-- main-content -->
  </div>
</div><!-- #top -->






